<%= stylesheet_link_tag "bootstrap.min.css" %>
<%= stylesheet_link_tag "style-sign.css" %>
<%= javascript_include_tag "bootstrap.min.js" %>
<%= javascript_include_tag "jquery-1.11.3.min.js" %>
<%= javascript_include_tag "sign.js"%>

<div class="text-center" style="padding:50px 0">
	<div class="logo">register</div>
	<!-- Main Form -->
	<div class="login-form-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "register-form", class: "text-left") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
				<div class="login-group">
          <div class="form-group">
            <%= f.label :email, for: "reg_email", class: "sr-only"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "text", class: "form-control", id: "reg_email", name: "reg_email", placeholder: "email"%>
          </div>
					<div class="form-group">
            <%= f.label :password, for: "reg_password", class: "sr-only"%>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", type: "password", class: "form-control", id:"reg_password", name: "reg_password", placeholder: "password"%>
					</div>
					<div class="form-group">
            <%= f.label :password_confirmation, for: "reg_password_confirm", class: "sr-only"%><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", class: "form-control", id: "reg_password_confirm", name: "reg_password_confirm", placeholder: "confirm password"%>
					</div>
				</div>
        <%= f.submit "Sign up", type: "submit", class: "login-button"%>
			</div>
			<div class="etc-login-form">
				<p>already have an account? <a href="#">login here</a></p>
			</div>
		<% end %>
	</div>
	<!-- end:Main Form -->
</div>

